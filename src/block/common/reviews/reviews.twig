
				<div class="box-collateral box-collateral_product_review_data" id="{{ content.id }}">
					<div class="box-collateral__container">
						{% if content.toggle == "true" %}
						<h2 class="box-collateral__title js-toggle-button  {{ content.status }}">{{ content.title }}</h2>
						<div class="box-wrap js-toggle-content  {{ content.status }}">
						{% endif %}
						<div class="box-reviews" id="customer-reviews">
								<h3 class="box-reviews__title">{{ content.title }}</h3>
								{% if content.summary %}
								<div class="review-summary">
										<div class="review-summary__item">
											<div class="review-summary__total">
												<div class="review-summary__stats">
													<span class="review-summary__stats-number">4.91</span>
													<span class="review-summary__stats-text review-summary__stats-text_nowrap">из 5 звёзд</span>
												</div>
											</div>
											<div class="rating-item rating-item_summary">
												<div class="rating-item__stars">

													<span class="rating-item__star rating-item__star_big "></span>

													<span class="rating-item__star rating-item__star_big "></span>

													<span class="rating-item__star rating-item__star_big "></span>

													<span class="rating-item__star rating-item__star_big "></span>

													<span class="rating-item__star rating-item__star_big "></span>
												</div>
											</div>
											<a class="review-summary__button box-reviews__show-form js-show-review-form" href="{{ content.link }}">Оставить свой отзыв</a>
										</div>
										<div class="review-summary__item">
											<div class="review-summary__stats">
												<span class="review-summary__stats-number">15</span>
												<span class="review-summary__stats-text">отзывов</span>
											</div>
										</div>
										<div class="review-summary__item">
											<div class="review-summary__stats">
												<span class="review-summary__stats-number">100%</span>
												<span class="review-summary__stats-text">пользователей рекомендуют этот товар</span>
											</div>
										</div>
									</div>
								{% endif %}
								<ul id="customer-reviews-list" class="reviews-list">
									{% for item in content.list %}
									<li class="reviews-list__item review-item review-list review-list_filter review-list_5">
										<div class="review-item__left">
											<div class="rating-item rating-item_main">
												<p class="rating-item__name">Общая оценка:</p>
												<div class="rating-item__stars">
													<i class="rating-item__star rating-item__star_full"></i>
													<i class="rating-item__star rating-item__star_full"></i>
													<i class="rating-item__star rating-item__star_full"></i>
													<i class="rating-item__star rating-item__star_full"></i>
													<i class="rating-item__star rating-item__star_full"></i>
												</div>
											</div>
											<span class="review-item__date">{{ item.date }}</span>
											<p class="review-item__user-name">{{ item.name }}</p>
											<div class="review-item__recommend">Я рекомендую этот товар</div>
										</div>
										<div class="review-item__right">
											<div class="review-item__container">
												{% if item.title %}
												<p class="review-item__title">{{ item.title }}</p>
												{% endif %}
												{% if item.detail %}
												<p class="review-item__detail">{{ item.detail }}</p>
												{% endif %}
												{% if item.plus %}
												<div class="review-item__notes review-item__notes_pros">
													Достоинства:
													<p class="review-item__notes-text">{{ item.plus }}</p>
												</div>
												{% endif %}
												{% if item.minus %}
												<div class="review-item__notes review-item__notes_cons">
													Недостатки:
													<p class="review-item__notes-text">{{ item.minus }}</p>
												</div>
												{% endif %}
												{% if item.link %}
												<div class="review-item__source">
													<a href="{{ item.link }}" {{ item.link_attr }}>{{ item.link_name }}</a>
												</div>
												{% endif %}
											</div>
										</div>
									</li>
									{% endfor %}
								</ul>
								<div class="customer-review-more">
									<a href="{{ content.link }}" class="customer-review-more__btn" target="_blank">Показать ещё</a>
								</div>
							</div>
						{% if content.toggle == "true" %}
						</div>
						{% endif %}
					</div>
				</div>
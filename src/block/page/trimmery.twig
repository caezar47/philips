							<h2 class="box-collateral__title js-toggle-button  {{ content.status }}">{{ content.title }}</h2>
							<div class="box-wrap js-toggle-content  {{ content.status }}">
								<div class="box-reviews" id="customer-reviews">
									<h3 class="box-reviews__title">{{ content.title }}</h3>
									<div class="review-summary">
										<div class="review-summary__item">
											<div class="review-summary__total">
												<div class="review-summary__stats">

<div class="main-container">
	<div class="main" role="main">
		<div class="std">
			<div id="promo">
				{% for content in content %}
				{% if content.view == "header" %}
				<section class="{{ content.prefix }}"  id="header_block">
					<picture class="{{ content.prefix }}__bg">
						<source type="image/webp" srcset="{{ path.img }}/promo/2022/P-8410/{{ content.bg }}-xs.webp" media="(max-width: 500px)">
						<source type="image/jpeg" srcset="{{ path.img }}/promo/2022/P-8410/{{ content.bg }}-xs.jpg" media="(max-width: 500px)">
						<source type="image/webp" srcset="{{ path.img }}/promo/2022/P-8410/{{ content.bg }}-md.webp" media="(max-width: 1199px)">
						<source type="image/jpeg" srcset="{{ path.img }}/promo/2022/P-8410/{{ content.bg }}-md.jpg" media="(max-width: 1199px)">
						<source type="image/webp" srcset="{{ path.img }}/promo/2022/P-8410/{{ content.bg }}-xl.webp" media="(min-width: 1200px)">
						<img src="{{ path.img }}/promo/2022/P-8410/{{ content.bg }}-xl.jpg" alt="">
					</picture>
					<div class="{{ content.prefix }}__container">
						<h1 class="{{ content.prefix }}__heading">
							{{ content.title }}
						</h1>
						<div class="{{ content.prefix }}__note">
							{{ content.note }}
						</div>
					</div>
				</section>
				{% endif %}
				{% if content.view == "card" %}
				<section class="{{ content.prefix }}">
					<div class="{{ content.prefix }}__container">
						<div class="{{ content.prefix }}__slider  swiper-container">
							<div class="swiper-wrapper">
								{% for card in content.card %}
									<div class="{{ content.prefix }}__item  swiper-slide">
										<div class="{{ content.prefix }}__item-wrap">
											<div>
												<a href="{{ card.link }}" target="_blank">
													<picture class="{{ content.prefix }}__item-img">
														<source type="image/webp" srcset="{{ path.img }}/promo/2022/P-8410/{{ card.img }}.webp">
														<img src="{{ path.img }}/promo/2022/P-8410/{{ card.img }}.png" alt="{{ card.name }}">
													</picture>
												</a>

												<p class="{{ content.prefix }}__item-name">
													<a href="{{ card.link }}" target="_blank">{{ card.name }}</a>
												</p>
												<div class="{{ content.prefix }}__item-note">
													{{ card.note }}
												</div>
											</div>
											<div class="{{ content.prefix }}__item-group">
												<div class="{{ content.prefix }}__item-price">
													{% if status.name == 'prod' %}
														{{  '{{widget type="aristos_widgets/widget_price" sku="'}}{{ card.sku }}{{ '" old_price="1" cache_lifetime="86400"}} '}}
													{% else %}
													<div class="price-box">
														{% if card.cost_old %}
														<p class="old-price">
															<span class="price">{{ card.cost_old }} ₽</span>
														</p>
														{% endif %}
														<p class="special-price">
															<span class="price">{{ card.cost }} ₽ </span>
														</p>
													</div>
													{% endif %}
												</div>
												<div class="{{ content.prefix }}__item-btn">
													{% if status.name == 'prod' %}
															{{  '{{widget type="aristos_widgets/widget_addToCart" sku="'}}{{ card.sku }}{{ '" cache_lifetime="86400"}} '}}
														{% else %}
															<a href="{{ card.bay }}" target="_blank" class="button button_in-stock">Купить</a>
															<a href="{{ card.bay }}" target="_blank" class="button button_out-stock">Сообщить о поступлении</a>

														{% endif %}
{#														<a href="{{ card.bay }}" target="_blank" class="button button_in-stock">Купить</a>#}
														<a class="button  scrollto" href="#sku_block" data-scrollto-diff="-60">Смотреть всю серию</a>

													</div>
											</div>
										</div>
									</div>
								{% endfor %}
							</div>
						</div>
						<button type="button" class="{{ content.prefix }}__slider-btn swiper-button-prev"></button>
						<button type="button" class="{{ content.prefix }}__slider-btn  swiper-button-next"></button>
						<div class="{{ content.prefix }}__btn-wrap">
							<a href="{{ content.link }}" class="{{ content.prefix }}__btn  scrollto" data-scrollto-diff="-60">
								{{ content.btn }}
							</a>
						</div>
					</div>
				</section>
				{% endif %}
				{% if content.view == "features" %}
				<section class="{{ content.prefix }} swiper-container" id="trimmery-features">
					<div class="swiper-wrapper">
						{% for card in content.card %}
						<div class="{{ content.prefix }}__item  swiper-slide  {{ card.mod }}">
							{% if card.bg %}
							<picture class="{{ content.prefix }}__item-bg">
								<source type="image/webp" srcset="{{ path.img }}/promo/2022/P-8410/{{ card.bg }}-xs.webp" media="(max-width: 500px)">
								<source type="image/jpeg" srcset="{{ path.img }}/promo/2022/P-8410/{{ card.bg }}-xs.jpg" media="(max-width: 500px)">
								<source type="image/webp" srcset="{{ path.img }}/promo/2022/P-8410/{{ card.bg }}.webp">
								<img src="{{ path.img }}/promo/2022/P-8410/{{ card.bg }}.jpg" alt="">
							</picture>
							{% endif %}
							<div class="{{ content.prefix }}__item-wrap">
								<div class="{{ content.prefix }}__item-note">
									{% if card.icon %}
										<picture class="{{ content.prefix }}__item-icon">
											<source type="image/webp" srcset="{{ path.img }}/promo/2022/P-8410/{{ card.icon }}.webp">
											<img src="{{ path.img }}/promo/2022/P-8410/{{ card.icon }}.png" alt="">
										</picture>
									{% endif %}
									{{ card.note }}
								</div>
							</div>
						</div>
						{% endfor %}
					</div>
					<button type="button" class="{{ content.prefix }}__btn swiper-button-prev"></button>
					<button type="button" class="{{ content.prefix }}__btn  swiper-button-next"></button>
				</section>
				{% endif %}
				{% if content.view == "description" %}
				<section class="{{ content.prefix }}">
					<div class="{{ content.prefix }}__container">
						<div class="{{ content.prefix }}__flex">
							<div>
								<div>
									<p class="{{ content.prefix }}__name">{{ content.name }}</p>
									<h3 class="{{ content.prefix }}__title">{{ content.title }}</h3>
									<div class="{{ content.prefix }}__reviews">
										<img src="{{ path.img }}/promo/2022/P-8410/reviews.svg" alt="">
										<a href="{{ content.reviews }}" target="_blank" class="{{ content.prefix }}__reviews-btn">Отзывы</a>
									</div>
									<div class="{{ content.prefix }}__img-wrap  hidden-md">
										<picture class="{{ content.prefix }}__img">
											<source type="image/webp" srcset="{{ path.img }}/promo/2022/P-8410/{{ content.img }}.webp" >
											<img src="{{ path.img }}/promo/2022/P-8410/{{ content.img }}.jpg" alt="{{ content.name }}">
										</picture>
										<div class="{{ content.prefix }}__img-sku">{{ content.sku }}</div>
									</div>
								</div>
								<div class="{{ content.prefix }}__card-wrap">
									{% for card in content.card %}
									<div class="{{ content.prefix }}__card">
										<picture class="{{ content.prefix }}__card-img">
											<source type="image/webp" srcset="{{ path.img }}/promo/2022/P-8410/{{ card.img }}.webp">
											<img src="{{ path.img }}/promo/2022/P-8410/{{ card.img }}.png" alt="{{ card.name }}">
										</picture>
										<div class="{{ content.prefix }}__card-desc">
											<p class="{{ content.prefix }}__card-name">{{ card.name }}</p>
											<div class="{{ content.prefix }}__card-note">
												{{ card.note }}
												<button class="{{ content.prefix }}__card-btn"></button>
											</div>
										</div>
									</div>
									{% endfor %}
								</div>
								<div class="{{ content.prefix }}__price">
									{% if status.name == 'prod' %}
										{{  '{{widget type="aristos_widgets/widget_price" sku="'}}{{ content.sku }}{{ '" old_price="1" cache_lifetime="86400"}} '}}
									{% else %}
										<div class="price-box">
											{% if content.cost_old %}
												<p class="old-price">
													<span class="price">{{ content.cost_old }} ₽</span>
												</p>
											{% endif %}
											<p class="special-price">
												<span class="price">{{ content.cost }} ₽ </span>
											</p>
										</div>
									{% endif %}
									{% if status.name == 'prod' %}
										{{  '{{widget type="aristos_widgets/widget_addToCart" sku="'}}{{ content.sku }}{{ '" cache_lifetime="86400"}} '}}
									{% else %}
										<a href="{{ content.bay }}" target="_blank" class="button button_in-stock">Купить</a>
									{% endif %}

									<a href="{{ content.link }}" target="_blank" class="button">Подробнее</a>
								</div>
							</div>
							<div class="{{ content.prefix }}__img-wrap  visible-md">
								<picture class="{{ content.prefix }}__img">
									<source type="image/webp" srcset="{{ path.img }}/promo/2022/P-8410/{{ content.img }}.webp" >
									<img src="{{ path.img }}/promo/2022/P-8410/{{ content.img }}.jpg" alt="{{ content.name }}">
								</picture>
								<div class="{{ content.prefix }}__img-sku">{{ content.sku }}</div>
							</div>
						</div>
					</div>
				</section>
				{% endif %}
